{
  "name": "lloc/wp-nowpayments-integration",
  "description": "Cryptocurrency Payment integration using the nowpayments.io Gateway\n",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/lloc/wp-nowpayments-itegration",
  "require": {
    "php": ">=7.4",
    "composer/installers": "~1.9.0",
    "ext-json": "*",
    "league/container": "^4.2"
  },
  "require-dev": {
    "phpunit/phpunit": ">=7",
    "brain/monkey": "2.*",
    "phpstan/phpstan": "^1.8",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "phpstan/extension-installer": "^1.1",
    "smeghead/php-class-diagram": "^0.0.7"
  },
  "autoload": {
    "psr-4": {
      "lloc\\Nowpayments\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "lloc\\NowpaymentsTests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "coverage": "vendor/bin/phpunit --coverage-html ./reports/php/coverage",
    "analyze": "vendor/bin/phpstan analyze",
    "diagram": "vendor/bin/php-class-diagram --php7 includes > plantuml_gist.puml"
  },
  "authors": [
    {
      "name": "Dennis Ploetner",
      "email": "re@lloc.de",
      "homepage": "https://ploetner.io/"
    }
  ],
  "keywords": [
    "payments",
    "nowpayments",
    "gateway",
    "integration",
    "cryptocurrency"
  ],
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
